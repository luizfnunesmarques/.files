alias gaa="git add ."
alias gcm="git commit -m"

function gco() {
  echo "-- checking $1 --"
  git checkout $1
}

function gpush() {
  echo "-- pushing $1 to origin remote --"
  git push origin $1
}

function gadd() {
  echo "-- adding files --"
  git add $@
}

